<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @collaboration %>
    <% if @collaboration.photos.attached? %>
      <div class="project-photos">
        <% @collaboration.photos.each do |photo| %>
          <%= image_tag photo %>
        <% end %>
    <% end %>

    <%= link_to 'Edit this collaboration', edit_collaboration_path(@collaboration), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this collaboration', collaboration_path(@collaboration), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to collaborations', collaborations_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
